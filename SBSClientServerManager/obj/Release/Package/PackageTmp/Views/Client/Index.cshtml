@model IEnumerable<SBSClientServerManager.Models.ViewModels.ClientViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    @*<script src="~/Scripts/jquery-3.3.1.min.js"></script>*@
    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
    <script>

           
        
        function viewAddClient() {
            var url = "/client/add";

            $("#AddClientModalBody").load(url, function () {
               

            })
        }

        function viewEditClient(clientId) {
            var url = "/client/edit?id=" + clientId;

            $("#EditClientModalBody").load(url, function () {
               

            })
        }
        function Delete(clientId) {
            
            $("#ConfirmDelete").click(function () {
                $.ajax('/client/delete?id=', {
                    type: 'POST',
                    data: { id: clientId },
                    success: function () {
                        window.location.href = "/client/index";
                         
                    }
                }
                )
            }
            )
        }
          

/**/</script>
</head>




<h2>Client List</h2>
@if (!Model.Any())
{

    <h3>Oops, No Client Yet.</h3>
    <button type="button" class="btn btn-primary" onclick="viewAddClient()" data-toggle="modal" data-target="#AddClientModal">
        Add New Client
    </button>
    <div class="modal fade" id="AddClientModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">New Client</h3>

                </div>
                <div class="modal-body" id="AddClientModalBody">

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <!--Add Client Modal-->
    <div class="modal fade" id="AddClientModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">New Client</h3>

                </div>
                <div class="modal-body" id="AddClientModalBody">

                </div>

            </div>
        </div>
    </div>

    <!--Edit client Modal-->
    <div class="modal fade" id="EditClientModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Edit Client Details</h3>

                </div>
                <div class="modal-body" id="EditClientModalBody">

                </div>

            </div>
        </div>
    </div>
    <!--Delete Client Modal-->
    <div class="modal fade" id="DeleteClientModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Client</h5>

                </div>
                <div class="modal-body" id="DeleteClientModalBody">
                    <h4>Are you sure you want to Delete this Client form Database?</h4>
                </div>
                <div class="modal-footer">
                    <button type="button"  class="btn btn-danger" id="ConfirmDelete">Yes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                </div>

            </div>
        </div>
    </div>


    <button type="button" onclick="viewAddClient()" class="btn btn-primary" data-toggle="modal" data-target="#AddClientModal">
        Add New Client
    </button>

    <table class="table table-hover table-bordered ">
        <thead>

            <tr class="btn-primary">
                <th>S/N</th>
                <th>Client Name</th>
                <th>Action</th>
            </tr>
        <tbody>
            @{ int num = 1;}
            @foreach (var client in Model)
            {
                <tr>
                    <th>@num</th>
                    <td><a href="/Client/Details?Id=@client.Id">@client.Name</a> </td>
                    <td>
                        <div>
                            <button onclick="window.location.href='/client/details?Id=@client.Id'" class="btn btn-info">Details</button>
                            <button type="button" onclick="viewEditClient(@client.Id)" class="btn btn-warning" data-toggle="modal" data-target="#EditClientModal">Edit</button>
                            <button type="button" onclick="Delete(@client.Id)" class="btn btn-danger" data-toggle="modal" data-target="#DeleteClientModal">Delete</button>
                            </div>

                    </td>
                </tr>
                num++;
            }
        </tbody>
    </table>

}

